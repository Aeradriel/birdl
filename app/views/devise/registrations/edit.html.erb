<body class="userEdit_body">

  <h2 class="userEdit_title"><%= t(:my_account) %></h2>
		<div class="userEdit_panel">
        	<span id="required_notification"><%= t(:denotes_required_filed) %></span>
		
      	 	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :id => 'edit_user'}) do |f| %>
  	      	<%= devise_error_messages! %>
			<table class="table_paneladmin">
	          	<tr>
    	          	<td><%= f.label :email, :class => 'userForm_label' %></td>
    	          	<td><span class="userEdit_input"><%= f.email_field :email, autofocus: true %></span></td>
    	       	</tr>
	
	            <tr>
	              	<td><%= f.label :first_name, :class => 'userForm_label' %></td>
	              	<td><span class="userEdit_input"><%= f.text_field :first_name %></span></td>
	            </tr>
	
	            <tr>
	              	<td><%= f.label :last_name, :class => 'userForm_label'  %></td>
	              	<td><span class="userEdit_input"><%= f.text_field :last_name %></span></td>
	            </tr>
	
	        	<tr>
	              	<td><%= f.label :birthdate, :class => 'userForm_label'  %></td>
	              	<td><span class="userEdit_input"><%= f.date_select :birthdate, :start_year => Time.now.year - 100, :end_year => (Time.now.year - 18), :include_blank => true %></span></td>
   	       		</tr>

   		        <tr>
        			<td><%= f.label :gender, :class => 'userForm_label'  %></td>
              		<td><span class="userEdit_input"><%= f.select :gender, {t(:male) => 1, t(:female) => 0} %></span></td>
           		</tr>

           		<tr>
              		<td><%= f.label :country_id, :class => 'userForm_label'  %></td>
                	<% c = Country.all.collect { |c| [c.name, c.id] } %>
                	<% c.insert(0, [t(:unknown), nil]) %>
              		<td><span class="userEdit_input"><%= f.select :country_id, c %></span></td>
           		</tr>

              	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div><%= t(:currently_waiting_confirmation_for, :email => resource.unconfirmed_email) %></div>
              	<% end %>

           		<tr>
              		<td><%= f.label :password, :class => 'userForm_label'  %> <i class="info" title="<%= t(:leave_blank_for_unchanged) %>"><span class="help_button">?</span></i></td>
              		<td><span class="userEdit_input"><%= f.password_field :password, autocomplete: "off" %></span></td>
           		</tr>

           		<tr>
              		<td><%= f.label :password_confirmation, :class => 'userForm_label'  %></td>
              		<td><span class="userEdit_input"><%= f.password_field :password_confirmation, autocomplete: "off" %></span></td>
           		</tr>

           		<tr>
              		<td><%= f.label :current_password, :class => 'userForm_label'  %> <i class="info" title="<%= t(:need_current_password_for_changes) %>"><span class="help_button">?</span></i></td>
             		<td><span class="userEdit_input"><%= f.password_field :current_password, autocomplete: "off" %></span></td>
           		</tr>
			</table>
        <p><%= f.submit t(:update), :id => 'edit_submit' , :class => 'btn btn-success btn-mini icon-white icon-remove edit_button' %></p>
        <% end %>
		</div>
		<div class="userDelete_panel">
			<h2><%= t(:cancel_account) %></h2>

        	<p><%= button_to t(:cancel_account), registration_path(resource_name),
                         data: { confirm: t(:account_deletion_warning) }, method: :delete, :id => 'delete_submit' , :class => 'btn btn-danger btn-mini icon-white icon-remove delete_account_button'%></p>
		</div>
</body>