<div class="content">
  <div class="panel panel-info">
    <div class="panel-heading">
      <%= t(:events) %>
    </div>
    <div class="panel-body">
      <table class="table">
        <tr>
          <th><%= t(:event_title) %></th>
          <th><%= t(:date_begin) %></th>
          <th><%= t(:free_slots) %></th>
        </tr>
        <% @events.each do |e| %>
            <tr>
              <td><%= link_to e.name, event_route(e) %></td>
              <td><%= e.date %></td>
              <td><%= e.max_slots - e.users.count %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>