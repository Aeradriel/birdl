<!DOCTYPE html>
<html>
<head>
  <title>Bird'L</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <ul class="nav navbar-nav navbar-left">
      <% if user_signed_in? %>
          <li><%= link_to t(:home), '/', :class => 'navbar-link',
                          :id => 'home_link' %></li>
          <li><%= link_to t(:my_account), edit_user_registration_path, :class => 'navbar-link',
                          :id => 'profile_link' %></li>
          <% if current_user.admin %>
              <li><%= link_to t(:admin), '/admin', :class => 'navbar-link',
                              :id => 'admin_link' %></li>
          <% end %>
          <li><%= link_to t(:disconnect), destroy_user_session_path, method: :delete,
                          :class => 'navbar-link logout', :id => 'logout_link' %></li>
      <% else %>
          <li><%= link_to t(:sign_up), new_user_registration_path, :class => 'navbar-link',
                          :id => 'signup_link' %></li>
          <li><%= link_to t(:sign_in), new_user_session_path, :class => 'navbar-link',
                          :id => 'signin_link' %></li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="selector_ navbar-right">
        <div class="selector_container">
          <section class="selector_main">
            <div class="wrapper-demo">
              <div class="wrapper-dropdown-3" tabindex="1">
                    <span>
                      <div class="selector_icon"><img src="/images/flags/<%= flag(I18n.locale) %>"/></div>
                      <div class="selector_text"><%= I18n.locale %></div>
                      <div style="clear: both;"></div>
                    </span>
                <ul class="dropdown">
                  <% Country.where(available: true).each do |country| %>
                      <li>
                        <div class="selector_icon"><img src="/images/flags/<%= country.name %>.ico"/></div>
                        <div class="selector_text"><%= link_to country.i18n_key, "/change_locale/#{country.i18n_key}" %></a></div>
                        <div style="clear: both;"></div>
                      </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </section>
        </div>
      </li>
    </ul>
  </div>
</nav>
<% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= flash[:alert] %>
    </div>
<% end %>
<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= flash[:notice] %>
    </div>
<% end %>

<%= yield %>

</body>
</html>
